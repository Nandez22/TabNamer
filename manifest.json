{
    "manifest_version": 3,
    "name": "TabNamer",
    "version": "0.2",

    "description": "Renames Tabs. What did you expect it to do?",

    "icons": {
        "48": "Icons/Icon48.jpg"
    },

    "action": {
        "default_popup": "Menu/Menu.html",
        "default_icon": { "48": "Icons/Icon48.jpg" }
    },

    "background": {
        "service_worker": "Scripts/Background.js",
        "type": "module"
    },

    "permissions": ["tabs", "scripting", "storage"],
    "host_permissions": ["<all_urls>"]
}